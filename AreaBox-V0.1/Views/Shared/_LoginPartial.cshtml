@using Microsoft.AspNetCore.Identity
@using AreaBox_V0._1.Data.Model

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    <ul class="navbar-nav form-inline">
        @if (SignInManager.IsSignedIn(User))
        {


        <li class="form-inline">
                 <a id="manage" class="nav-link text-dark m-2" asp-area="Admin" asp-page="/Settings/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

                <form id="logoutForm" class="form-inline" asp-area="Auth" asp-page="/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-danger"><i class="fas fa-user"></i>Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="login-btn">
                <a class="item-btn" id="login" asp-area="Auth" asp-page="/Register"><i class="fas fa-user"></i>Register</a>
                <a class="item-btn" id="login" asp-area="Auth" asp-page="/Login"><i class="fas fa-user"></i>Login</a>
            </li>
        }
    </ul>
