@using Microsoft.AspNetCore.Identity
@using AreaBox_V0._1.Data.Model

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


    <ul class="navbar-nav form-inline">
        @if (SignInManager.IsSignedIn(User))
        {


        <li class="form-inline">
            @if (User.IsInRole("User"))
             {
            <a id="manage" class="nav-link text-dark m-2" asp-area="User" asp-controller="Settings" asp-action="MyAccount" title="Manage">Hello @UserManager.GetUserName(User)!</a>
             }

             else if (User.IsInRole("SuperAdmin") || User.IsInRole("ContentManager") || User.IsInRole("TechnicalSupport"))
             {
                <a id="manage" class="nav-link text-dark m-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            }
            else
            {
                <a id="manage" class="nav-link text-dark m-2" asp-area="User" asp-controller="Settings" asp-action="MyAccount" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            }
            <form id="logoutForm" class="form-inline" asp-area="Auth" asp-page="/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-danger"><i class="fas fa-user"></i>Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="login-btn">
                <a class="item-btn" id="login" asp-area="Auth" asp-page="/Register"><i class="fas fa-user"></i>Register</a>
                <a class="item-btn" id="login" asp-area="Auth" asp-page="/Login"><i class="fas fa-user"></i>Login</a>
            </li>
        }
    </ul>
