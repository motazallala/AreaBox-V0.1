@page
@model LoginWith2faModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" type="image/x-icon" href="media/favicon.png">
    <link rel="stylesheet" href="~/userhome/dependencies/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/userhome/dependencies/icofont/icofont.min.css">
    <link rel="stylesheet" href="~/userhome/dependencies/slick-carousel/css/slick.css">
    <link rel="stylesheet" href="~/userhome/dependencies/slick-carousel/css/slick-theme.css">
    <link rel="stylesheet" href="~/userhome/dependencies/magnific-popup/css/magnific-popup.css">
    <link rel="stylesheet" href="~/userhome/dependencies/sal.js/sal.css" type="text/css">
    <link rel="stylesheet" href="~/userhome/dependencies/select2/css/select2.min.css" type="text/css">
    <link rel="stylesheet" href="~/UserHome/assets/css/app.css">
</head>
<body>
    <a href="#wrapper" data-type="section-switch" class="scrollup">
        <i class="icofont-bubble-up"></i>
    </a>
    <!-- Preloader Start Here -->
    <div id="preloader"></div>
    <!-- Preloader End Here -->
    <div id="wrapper" class="wrapper overflow-hidden">

        <!--=====================================-->
        <!--=          Header Menu Start       	=-->
        <!--=====================================-->
        <div class="login-page-wrap">
            <div class="content-wrap">
                <div class="login-content">
                    <div class="item-logo">
                        <a asp-action="Index" asp-controller="Home" asp-area=""><img src="~/userhome/media/AreaBoxLogo.png" alt="logo"></a>
                    </div>
                    <div class="login-form-wrap">
                        <div class="tab-content">
                            <div class="tab-pane login-tab fade show active" id="login-tab" role="tabpanel">
                                <h3 class="item-title">@ViewData["Title"] <span>Enter your authenticator code below</span></h3>
                                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                    <input asp-for="RememberMe" type="hidden" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                                        <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-3">
                                        <label asp-for="Input.RememberMachine" class="form-label">
                                            <input asp-for="Input.RememberMachine" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMachine)
                                        </label>
                                    </div>
                                    <div>
                                        <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                    </div>
                                    Don't have access to your authenticator device? You can
                                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="map-line">
                    <img src="~/userhome/media/banner/map_line.png" alt="map">
                    <ul class="map-marker">
                        <li><img src="~/userhome/media/banner/marker_1.png" alt="marker"></li>
                        <li><img src="~/userhome/media/banner/marker_2.png" alt="marker"></li>
                        <li><img src="~/userhome/media/banner/marker_3.png" alt="marker"></li>
                        <li><img src="~/userhome/media/banner/marker_4.png" alt="marker"></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--=====================================-->
        <!--=      Header Search Start          =-->
        <!--=====================================-->
        <div id="header-search" class="header-search">
            <button type="button" class="close">×</button>
            <form class="header-search-form">
                <input type="search" value="" placeholder="Search here..." />
                <button type="submit" class="search-btn">
                    <i class="flaticon-search"></i>
                </button>
            </form>
        </div>
    </div>

    <script src="~/userhome/dependencies/jquery/js/jquery.min.js"></script>
    <script src="~/userhome/dependencies/popper.js/js/popper.min.js"></script>
    <script src="~/userhome/dependencies/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/userhome/dependencies/imagesloaded/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/userhome/dependencies/isotope-layout/js/isotope.pkgd.min.js"></script>
    <script src="~/userhome/dependencies/slick-carousel/js/slick.min.js"></script>
    <script src="~/userhome/dependencies/sal.js/sal.js"></script>
    <script src="~/userhome/dependencies/magnific-popup/js/jquery.magnific-popup.min.js"></script>
    <script src="~/userhome/dependencies/bootstrap-validator/js/validator.min.js"></script>
    <script src="~/userhome/dependencies/select2/js/select2.min.js"></script>
    <script src="~/userhome/assets/js/app.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBtmXSwv4YmAKtcZyyad9W7D4AC08z0Rb4"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>


