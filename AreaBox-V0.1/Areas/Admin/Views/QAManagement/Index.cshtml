@model AreaBox_V0._1.Areas.Admin.Models.QuestionPostDto.send.QuestionPostIndexDto
@{
	ViewData["Title"] = "Index";
}

<div class="row">
	<div class="col-12">
		<h2>Question Post List : </h2>
	</div>
</div>


<div class="row">
	<div class="col-9">
<div class="row row-cards">
	<div class="col-12">
		<div class="card">
			<div class="table-responsive">
				<table border="1" class="table table-vcenter card-table table-striped">
					<thead>
						<tr>
							<th>ID</th>
							<th>User</th>
							<th>Short Description</th>
							<th>State</th>
							<th>Control</th>
							<th class="w-1"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.questionPostDtos)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.City.CityName</td>
								<td class="text-secondary">
									@item.Description
								</td>
								<td>
									<span class="post-state-badge @item.Id">
										@if (item.State == false)
										{
											<span class="badge bg-success me-1"></span> <span>Published</span>
										}
										else
										{
											<span class="badge bg-danger me-1"></span> <span>Suspended</span>
										}
									</span>
								</td>
								<td>
									<button type="button" class="btn btn-purple w-100" data-bs-toggle="modal" data-bs-target="#mediaManagementModal" data-id="@item.Id">
										View
									</button>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
			<partial name="_PaginationPartial" model="Model" />
</div>
	</div>
	<div class="col-3">
		<form class="card mb-4" asp-action="Index" asp-area="admin" asp-controller="QAManagement" method="get">
			<div class="card-header">
				<h3 class="card-title">Basic form</h3>
			</div>
			<div class="card-body">
				<div class="mb-3">
					<div class="form-label">Country:</div>
					<select class="form-select" id="countryDropdown" value='@Model.paramss["Country"]' name="Country">
					</select>
				</div>
				<div class="mb-3">
					<div style="display: inline-block; margin-right: 10px;">
						<div class="form-label">City:</div>
						<select class="form-select" id="cityDropdown" value='@Model.paramss["City"]' name="City">
						</select>
					</div>
				</div>
				<div class="mb-3">
					<div style="display: inline-block; margin-right: 10px;">
						<div class="form-label">Category:</div>
						<select class="form-select" id="categoryDropdown" value='@Model.paramss["Category"]' name="Category">
						</select>
					</div>
				<div class="mb-3">


					<div style="display: inline-block; margin-right: 10px;">
						<div class="form-label">Search:</div>
							<input type="text" class="form-control" name="Search" value='@Model.paramss["Search"]' placeholder="Input placeholder" />
					</div>
				</div>

			</div>
			</div>
			<div class="card-footer text-end">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>


	</div>
</div>

<div class="modal" id="mediaManagementModal" tabindex="-1">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Media Post Details</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<img id="mediaImage" src="" alt="Media Image" style="max-width: 100%; height: auto;">

				<div id="mediaDetails">
				</div>

				<div class="form-check form-switch">
					<input class="form-check-input" type="checkbox" id="enablePostSwitch">
					<label class="form-check-label" for="enablePostSwitch">State</label>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn me-auto" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" onclick="saveChanges()">Save changes</button>
			</div>
		</div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
	$(document).ready(function () {
		$('#mediaManagementModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);
			var postId = button.data('id');

			$('#enablePostSwitch').data('postId', postId);

			$.ajax({
				url: `/AdminApi/GetQAPostDetails/${postId}`,
				type: 'GET',
				data: { id: postId },
				success: function (data) {
					$('#mediaDetails').html(`
							<p>Name Publisher: ${data.name}</p>
							<p>Email: ${data.email}</p>
							<p>City: ${data.city}</p>
							<p>Country: ${data.country}</p>
							<p>Category: ${data.category}</p>
							<p>Description: ${data.description}</p>
							<p>Date: ${data.date}</p>
						`);

					var enablePostSwitch = $('#enablePostSwitch');
					enablePostSwitch.prop('checked', !button.closest('tr').find('td:nth-child(4) span').hasClass('bg-danger'));
					updateSwitchLabel(enablePostSwitch.prop('checked'));
				},
				error: function (error) {
					console.error('Error fetching media details:', error);
				}
			});
		});

		function updateSwitchLabel(isChecked) {
			var label = $('#enablePostSwitch').next('.form-check-label');
			label.text(isChecked ? 'Active' : 'Inactive');
		}

		$('#enablePostSwitch').on('change', function () {
			updateSwitchLabel($(this).prop('checked'));
		});

	});
</script>

<script>
	function saveChanges() {
		var postId = $('#enablePostSwitch').data('postId');
		var enablePostSwitch = $('#enablePostSwitch');
		var newState = enablePostSwitch.prop('checked') ? 'true' : 'false';

		$.ajax({
			url: `/AdminApi/DisableQAPost`,
			type: 'POST',
			data: { id: postId, newState },
			success: function (data) {
				updateBadge(postId, enablePostSwitch.prop('checked'));
				$('#mediaManagementModal').modal('hide');
			},
			error: function (error) {
				console.error('Error updating post state:', error);
			}
		});
	}
	function updateBadge(postId, isChecked) {
		var badge = $('.post-state-badge.' + postId + ' .badge');
		var text = $('.post-state-badge.' + postId + ' span:last-child');

		if (isChecked) {
			badge.removeClass('bg-danger').addClass('bg-success');
			text.text('Published');
		} else {
			badge.removeClass('bg-success').addClass('bg-danger');
			text.text('Suspended');
		}
	}
</script>
