<div class="row row-cards">
    <div class="col-12">
        <div class="card">
            <div class="table-responsive">
                <table border="1" class="table table-vcenter card-table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Short Description</th>
                            <th>State</th>
                            <th>Control</th>
                            <th class="w-1"></th>
                        </tr>
                    </thead>
                    <tbody>



                        @foreach(var item in Model){
                        <tr>
                            <td>@item.Id</td>
                                <td>@item.User.UserName</td>
                            <td class="text-secondary">
                                    @item.Description
                            </td>
                               <td>
                                    @if (item.State == false)
                                    {
                                                <span class="badge bg-success me-1"></span> <span>Published</span>
                                    }
                                    else
                                    {
                                                <span class="badge bg-danger me-1"></span> <span>Suspended</span>
                                    }
                                </td>
                            <td>
                                <button type="button" class="btn btn-purple w-100" data-toggle="modal" data-target="#exampleModal">
                                    View
                                </button>
                            </td>
                        </tr>
                        }





                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>