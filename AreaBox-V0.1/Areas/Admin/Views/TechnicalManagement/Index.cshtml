@model AreaBox_V0._1.Areas.Admin.Models.TechnicalReportDto.send.TechnicalReportsIndexDto
@{
	ViewData["Title"] = "Index";
}
<h3>Loction :</h3>


<div class="row">
	<div class="col-sm-8">
		<div class="row row-cards">
			<div class="col-12">
				<div class="card">
					<div class="table-responsive table-nowrap">
						<table border="1" class="table table-vcenter card-table table-striped">
							<thead>
								<tr>
									<th>User</th>
									<th>Details</th>
									<th>Technical Report Type </th>
									<th>Email</th>
									<th>Control</th>
									<th class="w-1"></th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model.TechnicalReports)
								{
									<tr>
										<td>@item.User.UserName</td>
										<td>@item.Details</td>
										<td class="text-secondary">
											@item.Type
										</td>
										<td>
											@item.UserEmail
										</td>
										<td>
											<button type="button" class="btn btn-purple w-100" data-bs-toggle="modal" data-bs-target="#technicalReportModal" data-id="@item.TechnicalReportId">
												View
											</button>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-3 ">
		<form class="card mb-4" asp-action="Index" asp-area="admin" asp-controller="TechnicalManagement" method="get">
			<div class="card-header">
				<h3 class="card-title">Basic form</h3>
			</div>
			<div class="card-body">
				<div class="mb-3">
					<div style="display: inline-block; margin-right: 10px;">
						<div class="mb-3">
							<div class="form-label">Inline Checkboxes</div>
							<div>
								<label class="form-check form-check-inline">
									<input class="form-check-input" type="checkbox" name="SendedToSuAdmin" value="True" @(Model.paramss["SendedToSuAdmin"] == "True" ? "checked" : "")>
									<span class="form-check-label">Sended To Super Admin</span>
								</label>
								<label class="form-check form-check-inline">
									<input class="form-check-input" type="checkbox" name="ReviewedBySuAdmin" value="True" @(Model.paramss["ReviewedBySuAdmin"] == "True" ? "checked" : "")>
									<span class="form-check-label">Super Admin Review It</span>
								</label>
								<label class="form-check form-check-inline">
									<input class="form-check-input" type="checkbox" name="ReviewCompleted" value="True" @(Model.paramss["ReviewCompleted"] == "True" ? "checked" : "")>
									<span class="form-check-label">Review Completed</span>
								</label>
							</div>
						</div>
					</div>
				</div>
				<div class="mb-3">

					<div style="display: inline-block; margin-right: 10px;">
						<div class="form-label">Category:</div>
						<input type="text" class="form-control" name="ss" value='' placeholder="Enter Email Search" />
					</div>
				</div>

			</div>
			<div class="card-footer text-end">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
	<partial name="_PaginationPartial" model="Model" />
</div>


